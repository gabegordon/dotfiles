#keystate_numlock = enable
#keystate_scrolllock = enable
#keystate_capslock = enable



"pamixer --increase 5"
    m:0x0 + c:123
    XF86AudioRaiseVolume 

"pamixer --decrease 5"
    m:0x0 + c:122
    XF86AudioLowerVolume 

"pamixer -t"
   XF86AudioMute

"xbacklight -dec 10"
   XF86MonBrightnessDown

"xbacklight -inc 10"
   XF86MonBrightnessUp

"kbdlight up"
   XF86KbdBrightnessUp

"kbdlight down"
   XF86KbdBrightnessDown

"playerctl play-pause"
   XF86AudioPlay

"playerctl previous"
   XF86AudioPrev

"playerctl next"
   XF86AudioNext

#Remark
"xfce4-terminal --drop-down"
    m:0x1 + c:50
    Shift + Shift_L 

#Remark
"Ctrl"
    m:0x2 + c:66
    Caps_Lock 

